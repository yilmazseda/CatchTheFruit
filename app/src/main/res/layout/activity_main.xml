<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFADA"
    tools:context=".MainActivity">


    

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="403dp"
        android:layout_height="401dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="increaseScoringOne"
            app:srcCompat="@drawable/avocado" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="increaseScoringTwo"
            app:srcCompat="@drawable/banana" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="increaseScoringThree"
            app:srcCompat="@drawable/grape" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="increaseScoringThree"
            app:srcCompat="@drawable/strawberry" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="increaseScoringTwo"
            app:srcCompat="@drawable/orange" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="increaseScoringOne"
            app:srcCompat="@drawable/pineapple" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="increaseScoringOne"
            app:srcCompat="@drawable/watermelon" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="increaseScoringThree"
            app:srcCompat="@drawable/strawberry" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="increaseScoringTwo"
            app:srcCompat="@drawable/banana" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="increaseScoringOne"
            app:srcCompat="@drawable/pineapple" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="increaseScoringThree"
            app:srcCompat="@drawable/grape" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="increaseScoringOne"
            app:srcCompat="@drawable/avocado" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="increaseScoringOne"
            app:srcCompat="@drawable/watermelon" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="increaseScoringTwo"
            app:srcCompat="@drawable/orange" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="increaseScoringTwo"
            app:srcCompat="@drawable/orange" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_row="3"
            android:layout_column="3"
            android:background="#312433"
            android:onClick="increaseScoringThree"
            app:srcCompat="@drawable/grape" />


    </GridLayout>

    <TextView
        android:id="@+id/timerText"
        android:layout_width="158dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="445dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="30:00"
        android:textColor="#3F51B5"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/scoreText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="158dp"
        android:layout_height="0dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="38dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Score:"
        android:textColor="#3F51B5"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerText" />

</androidx.constraintlayout.widget.ConstraintLayout>